@model MyFirstApp.Models.MembershipType

@{
    ViewData["Title"] = "Edit Membership Type";
}

<h1>Edit Membership Type</h1>

<hr />

@* Afficher les erreurs de validation *@
<partial name="_ValidationErrors" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="SignupFee" class="control-label"></label>
                <input asp-for="SignupFee" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="SignupFee" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DurationInMonths" class="control-label"></label>
                <input asp-for="DurationInMonths" class="form-control" type="number" />
                <span asp-validation-for="DurationInMonths" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DiscountRate" class="control-label">Discount Rate (%)</label>
                <input asp-for="DiscountRate" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
