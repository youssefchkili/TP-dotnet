@model MyFirstApp.ViewModels.MovieVM

@{
    ViewData["Title"] = "Modifier un Film";
}

<div class="container mt-4">
    <h1>Modifier le Film</h1>
    <hr />

    @* Afficher les erreurs de validation *@
    <partial name="_ValidationErrors" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="movie.Id" />
                <input type="hidden" asp-for="movie.ImageFile" />
                
                <div class="form-group mb-3">
                    <label asp-for="movie.Name" class="control-label fw-bold">Nom du Film</label>
                    <input asp-for="movie.Name" class="form-control" />
                    <span asp-validation-for="movie.Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="movie.DateAjoutMovie" class="control-label fw-bold">Date d'ajout</label>
                    <input asp-for="movie.DateAjoutMovie" type="datetime-local" class="form-control" />
                    <span asp-validation-for="movie.DateAjoutMovie" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="movie.GenreId" class="control-label fw-bold">Genre</label>
                    <select asp-for="movie.GenreId" class="form-control">
                        <option value="">-- Sélectionner un genre --</option>
                        @foreach (var genre in ViewBag.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                    <span asp-validation-for="movie.GenreId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="movie.Stock" class="control-label fw-bold">Stock</label>
                    <input asp-for="movie.Stock" type="number" class="form-control" min="0" />
                    <span asp-validation-for="movie.Stock" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Photo actuelle</label>
                    @if (!string.IsNullOrEmpty(Model.movie.ImageFile))
                    {
                        <div class="mb-2">
                            <img src="~/images/@Model.movie.ImageFile" alt="@Model.movie.Name" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Aucune photo</p>
                    }
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="photo" class="control-label fw-bold">Nouvelle Photo (optionnelle)</label>
                    <div class="d-flex align-items-center gap-2">
                        <input asp-for="photo" type="file" class="form-control" accept="image/*" id="photoInput" style="display: none;" />
                        <button type="button" class="btn btn-secondary" onclick="document.getElementById('photoInput').click()">
                            Choisir une nouvelle photo
                        </button>
                        <span id="fileName" class="text-muted">aucun fichier sélectionné</span>
                    </div>
                    <small class="text-muted">Laissez vide pour conserver la photo actuelle</small>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Afficher le nom du fichier sélectionné
        document.getElementById('photoInput').addEventListener('change', function(e) {
            var fileName = e.target.files.length > 0 ? e.target.files[0].name : 'aucun fichier sélectionné';
            document.getElementById('fileName').textContent = fileName;
        });
    </script>
}
