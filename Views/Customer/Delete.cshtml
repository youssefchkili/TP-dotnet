@model MyFirstApp.Models.Customer

@{
    ViewData["Title"] = "Supprimer un Client";
}

<h1>Supprimer le Client</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce client ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Discount Rate</dt>
        <dd class="col-sm-10">@Model.MembershipType?.DiscountRate</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
